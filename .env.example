# Onboarding Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (required)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Database URL (default: SQLite)
# For SQLite: sqlite+aiosqlite:///./onboarding.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/onboarding
DB_URL=sqlite+aiosqlite:///./onboarding.db

# Default assignees (without @)
DEFAULT_LEGAL_USERNAME=legal_team
DEFAULT_DEVOPS_USERNAME=devops_team

# Onboarding chat ID (required)
# Use @userinfobot to get your chat ID
ONBOARDING_CHAT_ID=-1001234567890

# Allowed creators (comma-separated Telegram user IDs)
ALLOWED_CREATORS=123456789,987654321

# Admin IDs (comma-separated Telegram user IDs)
ADMIN_IDS=123456789

# Timezone
TIMEZONE=Europe/London

# Reminder settings
LEGAL_REMINDER_DAYS=3
DEVOPS_REMINDER_DAYS=1
ESCALATION_HOURS=24
SCHEDULER_INTERVAL_MINUTES=30
