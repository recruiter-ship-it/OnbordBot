# Onboarding Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (required)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Database URL (default: SQLite)
# For SQLite:
DB_URL=sqlite+aiosqlite:///./onboarding.db
# For PostgreSQL:
# DB_URL=postgresql+asyncpg://user:password@localhost:5432/onboarding

# Default assignees (Telegram usernames without @)
DEFAULT_LEGAL_USERNAME=lawyer_username
DEFAULT_DEVOPS_USERNAME=devops_username

# Onboarding chat/group ID (required)
# Get this by forwarding a message from the group to @userinfobot
ONBOARDING_CHAT_ID=-1001234567890

# Allowed creators (comma-separated Telegram user IDs)
# Get your ID by messaging @userinfobot
ALLOWED_CREATORS=123456789,987654321

# Admin IDs (comma-separated Telegram user IDs)
ADMIN_IDS=123456789

# Timezone (default: Europe/London)
TIMEZONE=Europe/London

# Reminder settings
LEGAL_REMINDER_DAYS=3
DEVOPS_REMINDER_DAYS=1
ESCALATION_HOURS=24
SCHEDULER_INTERVAL_MINUTES=30
